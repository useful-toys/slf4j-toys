<?xml version="1.0" encoding="UTF-8"?>
<project name="opl-toys-2.0" default="lib-init" basedir="." >
    <description>Downloads dependencies</description>
	<dirname property="lib.dir" file="${ant.file}" />
    <property name="download.dir" value="${lib.dir}/download" />
	
	<echo message="${lib.dir}" />

    <target name="lib-init" description="Download dependencies" >
    	<mkdir dir="${lib.dir}/Slf4j-1.7.7"/>
    	<get dest="${lib.dir}/Slf4j-1.7.7" skipexisting="true" src="http://central.maven.org/maven2/org/slf4j/slf4j-simple/1.7.7/slf4j-simple-1.7.7.jar" />
    	<get dest="${lib.dir}/Slf4j-1.7.7" skipexisting="true" src="http://central.maven.org/maven2/org/slf4j/slf4j-api/1.7.7/slf4j-api-1.7.7.jar" />
    	<mkdir dir="${lib.dir}/JUnit-4.11" />
    	<get dest="${lib.dir}/JUnit-4.11" skipexisting="true" src="http://central.maven.org/maven2/junit/junit/4.11/junit-4.11.jar" />
    	<get dest="${lib.dir}/JUnit-4.11" skipexisting="true" src="http://central.maven.org/maven2/junit/junit/4.11/junit-4.11.jar" />
    	<get dest="${lib.dir}/JUnit-4.11" skipexisting="true" src="http://central.maven.org/maven2/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar" />
    </target>
</project>
